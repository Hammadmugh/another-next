generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Services {
  id            Int      @id @default(autoincrement())
  sellerName    String
  sellerStatus  String
  sellerImg     String
  serviceImg    String
  title         String
  description   String
  rating        Float
  reviews       Int
  price         String
  currency      String
  favoriteCount Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Seller {
  id          Int      @id @default(autoincrement())
  imgSrc      String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Imgs {
  id        Int      @id @default(autoincrement())
  imgSrc    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deals {
  id          Int      @id @default(autoincrement())
  imgSrc      String
  sellerRank  String
  title       String
  description String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Eservices {
  id          Int      @id @default(autoincrement())
  imgSrc      String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
}

model Gallory {
  id          Int      @id @default(autoincrement())
  imgSrc      String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
